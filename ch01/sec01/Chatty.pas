program Chatty (output);
{A longer program that needs semicolon statement seperators.}
begin
	write   ('A fine romance, '); {These lines are printed...}
	writeln ('with no kisses.');  {...on the same output line.}
	writeln; 		              {This ends the line with a carriage return.}
	writeln; 		              {These put two blank lines in the output.}
	writeln;
	write   ('A fine romance, ');
	writeln ('my friend, this is!')
end.{Chatty}


